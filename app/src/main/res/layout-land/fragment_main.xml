<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">
    <EditText
        android:id="@+id/fieldTv"
        android:layout_gravity="center"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textScaleX="1.6"
        android:textCursorDrawable="@drawable/thin_cursor"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watcherTv"
        android:textSize="25sp"
        android:textColor="#212121"
        android:text="@string/start_time_tv"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/scoresTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#212121"
        android:layout_marginTop="25dp"
        android:text="@string/start_score_tv"
        android:layout_below="@+id/watcherTv"
        android:layout_marginLeft="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bonusTv"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:textColor="#81D4FA"
        android:layout_gravity="bottom|center_horizontal"/>
    <Button
        android:id="@+id/pauseBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button_selector"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
