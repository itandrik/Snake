<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_img"
    tools:context="com.examplesnake.snake.ChoiceMenuActivity">
    <LinearLayout
        android:id="@+id/layoutChoiceButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_game_choice"
            android:background="@drawable/menu_button_selector"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:layout_marginTop="@dimen/margin_between_buttons"
            android:id="@+id/newGameBtn" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/difficulty_choice"
            android:background="@drawable/menu_button_selector"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_between_buttons"
            android:textSize="24sp"
            android:id="@+id/difficultyBtn" />
    </LinearLayout>

</FrameLayout>
